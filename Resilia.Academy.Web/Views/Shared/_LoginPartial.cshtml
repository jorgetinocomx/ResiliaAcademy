@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
        <!-- Nav Item - Alerts -->
        <li class="nav-item dropdown no-arrow mx-1">
            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bell fa-fw"></i>
                <!-- Counter - Alerts -->
                <span id="notifications-counter" class="badge badge-danger badge-counter">0</span>
            </a>
            <!-- Dropdown - Alerts -->
            <div  class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
             aria-labelledby="alertsDropdown">
                <h6 class="dropdown-header">
                    Notifications Center
                </h6>
                <a class="dropdown-item d-flex align-items-center notification-item" style="display:none !important;" id="0" href="#">
                    <div class="mr-3">
                        <div class="icon-circle bg-primary">
                            <i class="fas fa-envelope text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="small text-gray-500 notification-item-time-ago">December 12, 2019</div>
                        <span class="notification-item-text">A new monthly report is ready to download!</span>
                    </div>
                </a>
                <div id="notifications-center">
                </div>
                <a id="show-all-notifications-button" class="dropdown-item text-center small text-gray-500" style="display:none" href="#">Show All Notifications</a>
            </div>
        </li>
        <span class="navbar-text text-dark">Hello @User.Identity?.Name!</span>
        <input id="user-id" value="@User.Identity?.Name" disabled style="display: none;"/>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
}
</ul>
